<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".Admin.DataUser.AddDataUser"
    android:paddingTop="10dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/firstaid"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/nama"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:hint="Nama"
                android:inputType="text" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/no_tlp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:hint="No. Tlp"
                android:inputType="text" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/email"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:hint="Email"
                android:inputType="text" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/tmp_lahir"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:hint="Tempat Lahir"
                android:inputType="text" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/tgl_lahir"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:hint="Pilih Tanggal"
                android:inputType="text" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/alamat"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:hint="Alamat"
                android:inputType="text" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/berat_badan"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:hint="Berat Badan"
                android:inputType="text" />


            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/username"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:hint="Username"
                android:inputType="text" />


            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/password"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:hint="Password"
                android:inputType="textPassword" />


            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/konf_pass"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/et_bg"
                android:paddingLeft="15dp"
                android:hint="Konfirmasi Password"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_login"
                    android:textColor="#ffffff"
                    android:text="Register Now" />
                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_marginLeft="40dp"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/btn_login"
                    android:text="Cancel" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>